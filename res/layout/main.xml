<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="#ff4d4d53">
    <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Выберите кем играть"
            android:id="@+id/menu" android:layout_gravity="center_horizontal" android:layout_weight="1"
            android:textSize="24sp" android:gravity="center" android:phoneNumber="false"
            android:textIsSelectable="false" android:singleLine="false"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_gravity="center_horizontal" android:layout_weight="1"
            android:background="#ff4d4d53">
        <Button android:layout_width="match_parent" android:layout_height="match_parent" android:text="X"
                android:id="@+id/buttonX" android:layout_weight="1" android:textSize="40dp"/>
        <Button android:layout_width="match_parent" android:layout_height="match_parent" android:text="O"
                android:id="@+id/buttonO" android:layout_weight="1" android:textSize="40dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="1">
        <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="."
                android:id="@+id/button11" android:layout_weight="1" android:textColor="#ff000000"
                android:textStyle="bold" android:background="#ffffffff" android:layout_margin="2dp"
                android:enabled="false" android:textSize="40dp"/>
        <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="."
                android:id="@+id/button12" android:layout_weight="1" android:textColor="#ff000000"
                android:textStyle="bold" android:background="#ffffffff" android:layout_margin="2dp"
                android:enabled="false" android:textSize="40dp"/>
        <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="."
                android:id="@+id/button13" android:layout_weight="1" android:textColor="#ff000000"
                android:textStyle="bold" android:background="#ffffffff" android:layout_margin="2dp"
                android:enabled="false" android:textSize="40dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="1">
        <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="."
                android:id="@+id/button21" android:layout_weight="1" android:textColor="#ff000000"
                android:textStyle="bold" android:background="#ffffffff" android:layout_margin="2dp"
                android:enabled="false" android:textSize="40dp"/>
        <Button android:layout_width="match_parent" android:layout_height="match_parent" android:text="."
                android:id="@+id/button22" android:layout_weight="1" android:textColor="#ff000000"
                android:textStyle="bold" android:background="#ffffffff" android:layout_margin="2dp"
                android:enabled="false" android:textSize="40dp"/>
        <Button android:layout_width="match_parent" android:layout_height="match_parent" android:text="."
                android:id="@+id/button23" android:layout_weight="1" android:textColor="#ff000000"
                android:textStyle="bold" android:background="#ffffffff" android:layout_margin="2dp"
                android:enabled="false" android:textSize="40dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_gravity="center_horizontal" android:layout_weight="1">
        <Button android:layout_width="match_parent" android:layout_height="match_parent" android:text="."
                android:id="@+id/button31" android:layout_weight="1" android:textColor="#ff000000"
                android:textStyle="bold" android:background="#ffffffff" android:layout_margin="2dp"
                android:textSize="40dp"/>
        <Button android:layout_width="match_parent" android:layout_height="match_parent" android:text="."
                android:id="@+id/button32" android:layout_weight="1" android:background="#ffffffff"
                android:textColor="#ff000000" android:textStyle="bold" android:layout_margin="2dp"
                android:enabled="false" android:textSize="40dp"/>
        <Button android:layout_width="match_parent" android:layout_height="match_parent" android:text="."
                android:id="@+id/button33" android:layout_weight="1" android:textColor="#ff000000"
                android:textStyle="bold" android:background="#ffffffff" android:layout_margin="2dp"
                android:enabled="false" android:textSize="40dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_gravity="center_horizontal" android:layout_weight="1"
            android:background="#ff4d4d53">
        <Button android:layout_width="match_parent" android:layout_height="match_parent"
                android:text="СЫГРАТЬ С АНДРОИДОМ"
                android:id="@+id/buttonPC" android:layout_weight="1" android:enabled="false"/>
    </LinearLayout>
</LinearLayout>

